<body>
  <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">
      <div class="card login-card">
        <div class="row no-gutters">
          <div class="col-md-5">
            <img src="assets/images/login.jpg" alt="login" class="login-card-img">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <div class="brand-wrapper">
                <img src="assets/images/logo.svg" alt="logo" class="logo">
              </div>
              <p class="login-card-description">Create your account</p>
              <form autocomplete="off" method="POST">
                <% if (error_msg) { %>
                    <span style="color: red"><%= error_msg %></span>
                    <br/>
                    <% } %>
                  <label for="firstname">First name</label>
                  <input required type="text" name="firstname" class="form-control" id="firstname" placeholder="Enter your First name">
                
                <div class="form-group">
                  <label for="lastname">Last Name</label>
                  <input required type="text" name="lastname" class="form-control" id="lastname" placeholder="Enter your Last name">
                </div>
                
                <div class="form-group">
                  <label for="country" >Country</label><br>
                  <select class="form-control countrypicker" name="country" id="country" placeholder="Select your location"></select>
                  <script>
                    $('.countrypicker').countrypicker();
                  </script> 
                </div>
        
                <div class="form-group">
                  <label for="ainterest">Area of Interest</label>
                  <select class="form-control" id="ainterest" name="ainterest">
                    <option value="" selected="selected">Select Area of Interest</option>
                    <option value="" selected="selected">Maths</option>
                  </select>
                  </div>

                  <div class="form-group">
                    <label for="email">Email address</label>
                    <input required type="email" name="email" class="form-control" id="email" placeholder="Enter your email">
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input required type="password" name="password" class="form-control" id="password" placeholder="Create your password">
                  </div>
          
                  <div class="form-check">
                    <label class="form-check-label" for="isadmin">
                      Register as an Admin user
                    </label>
                    <input class="form-check-input" type="checkbox" value="1" id="isadmin" name="isadmin">
                  </div> <br>
          
                  <div class="form-check">
                    <input class="form-check-input" required type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">  I have read and accept the Wiley Online Library Terms & Conditions of Use and Wiley Privacy Policy
                    </label>
                  </div> <br>
        
                  <div class="form-group">
                  <input name="login" id="login" class="btn btn-block login-btn mb-4" type="submit" value="Register">
                </form>
            </div>
          </div>
          </div>
        </div>
