<h1>Register</h1> <br>
<% if (messages.error) { %>
    <%= messages.error %>
    <% } %>
<form action="signup" method="POST">
<div>
<label for="name">Name</label>
<input required type="text" id="name" name="name"> <br> <br>
</div>

<div>
<label for="email">email</label>
